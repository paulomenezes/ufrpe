<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="br.deinfo.ufrpe.start.SocialActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/bottom">
        <RelativeLayout
            android:id="@+id/header"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:background="@color/colorPrimaryDark">
            <RelativeLayout
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:layout_gravity="center"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:background="@drawable/shape_circle_white">
                <ImageView
                    android:contentDescription="@string/socialTitle"
                    android:layout_centerVertical="true"
                    android:layout_centerHorizontal="true"
                    android:layout_width="56dp"
                    android:layout_height="56dp"
                    android:src="@drawable/ic_person_dark_48dp"/>
            </RelativeLayout>
        </RelativeLayout>
        <ScrollView
            android:id="@+id/scrollview"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <View
                    android:layout_width="match_parent"
                    android:layout_height="150dp" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:elevation="2dp"
                    android:background="@color/colorPrimary">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/socialTitle"
                        android:textColor="@color/colorTextIcons"
                        android:padding="@dimen/activity_horizontal_margin"
                        style="@style/Base.TextAppearance.AppCompat.Title"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:background="?android:colorBackground"
                    android:padding="@dimen/activity_horizontal_margin">
                    <TextView
                        android:layout_weight="2"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="@string/login_tip"/>
                    <LinearLayout
                        android:layout_weight="2"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <Button
                            android:id="@+id/btnFacebook"
                            android:layout_gravity="end"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/facebook"
                            android:textColor="@color/facebook"
                            android:drawableEnd="@drawable/ic_facebook"
                            android:drawablePadding="@dimen/activity_horizontal_margin"
                            style="@style/Base.Widget.AppCompat.Button.Borderless"/>
                        <Button
                            android:id="@+id/btnTwitter"
                            android:layout_gravity="end"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/twitter"
                            android:textColor="@color/twitter"
                            android:drawableEnd="@drawable/ic_twitter"
                            android:drawablePadding="@dimen/activity_horizontal_margin"
                            style="@style/Base.Widget.AppCompat.Button.Borderless"/>
                        <Button
                            android:id="@+id/btnGooglePlus"
                            android:layout_gravity="end"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/google_plus"
                            android:textColor="@color/googlePlus"
                            android:drawableEnd="@drawable/ic_google_plus"
                            android:drawablePadding="@dimen/activity_horizontal_margin"
                            style="@style/Base.Widget.AppCompat.Button.Borderless"/>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </ScrollView>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/bottom"
        android:elevation="4dp"
        android:background="#FFF"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/btnSkip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/skip"
            android:textColor="@color/colorTextSecondary"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="@dimen/activity_horizontal_margin"
            style="@style/Base.Widget.AppCompat.Button.Borderless"/>
    </RelativeLayout>
</RelativeLayout>
